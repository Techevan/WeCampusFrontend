/* pages/transportation/timeSelector/timeSelector.wxss */

#header{
  background-color: white;
  width: 100%;
  height: 20pt;
  padding:8pt 20pt 8pt 20pt;
}

.intro-text{
  font-size: 11pt;
  color: #b2b2b2;
}

.unit{
  font-size: 11pt;
  color:#353535;
  line-height: 300px;
  vertical-align: middle;
  margin-left: 8pt;
  margin-right: 8pt;
  font-weight: bold;
}

picker-view-column view {
  line-height: 50px;
  color:#3399ff;
  font-size:40px;
  text-align:right;
}

.unselected{
  min-width: 80px;
  border-radius: 15px;
  border: #b2b2b2 1pt solid;
  padding: 4px 4px 4px 4px;
  font-size: 11pt;
  color: #b2b2b2;
  text-align: center;
  margin-top: 8px;
}

#bottom{
  width: 95%;
  margin:auto;
  margin-bottom: 18pt;
  text-align: center;
}

.submit{
  background-color: #fefefe;
  border-color: #fefefe;
  border-radius: 3pt;
  margin-left:6rpx;
  margin-right:6rpx;
  margin-top: 10rpx;
}

.submit_active{
  background-color: #3399ff;
  border-color: #3399ff;
  color:white;
}

.submit_hover{
  background-color: #eeeeee;
  border-color: #3399ff;
  color: #3399ff;
}

#introduction{
  width:100%;
  position: absolute;
  bottom: 10pt;
  text-align: center;
  font-size: 11pt;
  color: gray;
}

#confirm{
  margin-top: 36pt;
  text-align: center  
}

.confirm_button{
  background-color: white;
  border-color: #3399ff;
  color:#3399ff;
  min-width: 80pt;
}

.confirm_hover{
  background-color: #3399ff;
  border-color: #3399ff;
  color:white;
  min-width: 80pt;
}